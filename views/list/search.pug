extends ../layouts/common

block content
    div.ml-5.mr-5
        h1.mt-5
            span.ml-2 Users
            a.btn.btn-primary.ml-3(href="/users/create") Add
        
        .d-flex.align-item-center
            form.ml-auto(action="search" method="GET" class="d-flex")
                input(type="text" placeholder="Search anything" name="q" class="form-control")
                button(class="btn btn-primary ml-2 mr-2") Search

        table.table
            tr
                th Name
                th Phone
                th Action
            each user in users
                tr
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/id/" + user.id) View